<!DOCTYPE html>
<html>
  <head>
    <title>Bookstore</title>
    <%= csrf_meta_tags %>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Josefin+Sans' rel='stylesheet' type='text/css'>
  </head>

  <body class='<%= controller.controller_name %>'>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
              <div class="row">
                <div class="navbar-header">
                  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </button>

                  <%= link_to 'Pragmatic Bookshelf', store_path, class: "navbar-brand"%>

                </div>

                  <div class="collapse navbar-collapse" id="navbar-collapse">

                        <ul class="nav navbar-nav navbar-right">

                              <li><%= link_to t('.home'), store_path%></li>
                              <%unless session[:user_id]%>
                                <li><%= link_to t('.login'), login_path%></li>
                              <%end%>

                              <%if session[:user_id]%>
                                  <li><%= link_to t('.orders'), orders_path%></li>
                                  <li><%= link_to t('.users'), users_path%></li>
                                  <li><%= link_to t('.products'), products_path%></li>
                                  <li><%= link_to t('.logout'), logout_path, method: :delete%></li>
                              <%end%>
                                  <li><%= link_to 'EN', store_url(locale: :en), id: "en"%></li>
                                  <li><%= link_to 'RU', store_url(locale: :ru), id: "ru"%></li>
                        </ul>

                  </div>

                  <!-- /.navbar-collapse -->
              </div>
        </div>
        <!-- /.container-fluid -->
    </nav>

  </div>



    <div class="content" style="padding-top: 25px">

        <div class="row">

                <%= yield %>




          </div>

        </div>



  </body>
</html>
