<%if flash[:alert]%>
    <p id="notice"> <%= flash[:alert]%></p>
<%end%>
<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-login" style="box-shadow: 0 0 10px rgba(0,0,0,0.4);">
    <div class="panel-body">
      <div class="row">
        <div class="col-lg-12">
            <%= form_tag do%>
                <h2 style="text-align:center; font-size: 24px;">LOGIN</h2>

                <div class="form-group">
                  <%= label_tag :name, "Name" %>
                  <%= text_field_tag :name, params[:name], id:"username",  class:"form-control", placeholder:" Username"  %>

                </div>
                <div class="form-group">
                  <%= label_tag :password, "Password" %>
                  <%= password_field_tag :password, params[:password], id:"password", tabindex:"2", class:"form-control", placeholder:" Password"  %>
                </div>

                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                      <%= submit_tag "LOGIN",  id:"register-submit", tabindex:"4", class:"form-control btn btn-register"  %>

                    </div>
                  </div>
                </div>
            <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
